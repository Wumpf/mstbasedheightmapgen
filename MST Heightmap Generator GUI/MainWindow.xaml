<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WPFHost="clr-namespace:WPFHost" x:Class="MST_Heightmap_Generator_GUI.MainWindow"
        Title="MainWindow" Height="600" Width="1000" Closed="Window_Closed">
    <Grid>
        <Grid.Margin>
            <Thickness>5</Thickness>
        </Grid.Margin>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*" MinHeight="512" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="159" />
            <ColumnDefinition Width="141" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Generate Heightmap" VerticalAlignment="Bottom" Height="23" Click="GenerateHeightmap" Margin="10,0,10,10"/>
        <Slider Grid.Row="0" Grid.Column="1" Margin="10,8,10,0" VerticalAlignment="Top" Height="26" Maximum="100" LargeChange="5" SmallChange="1" Minimum="1" ValueChanged="Sl_MaxHeight_Changed" Value="50"/>
        <Label Grid.Row="0" Grid.Column="0" Content="Maximum Height" Margin="0,8,10,0" VerticalAlignment="Top" Height="26"/>

        <Slider Grid.Row="0" Grid.Column="1" Margin="10,41,10,0" VerticalAlignment="Top" Height="26" Maximum="1" LargeChange="0.2" SmallChange="0.05" ValueChanged="Sl_QuadraticSpline_Changed" Value="0.3"/>
        <Label Grid.Row="0" Grid.Column="0" Content="Quadratic Spline" Margin="0,39,10,0" VerticalAlignment="Top" Height="26"/>

        <Slider Grid.Row="0" Grid.Column="1" Margin="11,72,10,0" VerticalAlignment="Top" Height="26" Maximum="3" LargeChange="0.2" SmallChange="0.05" ValueChanged="Sl_NoiseIntensity_Changed" Value="1.0"/>
        <Label Grid.Row="0" Grid.Column="0" Content="Noise Intensity" Margin="0,70,10,0" VerticalAlignment="Top" Height="26"/>

        <Label Grid.Row="0" Grid.Column="0" Content="Noise Height Dependency" Margin="0,101,10,0" VerticalAlignment="Top" Height="26"/>
        <Slider Grid.Row="0" Grid.Column="1" Margin="10,103,10,0" VerticalAlignment="Top" Height="26" Maximum="2" LargeChange="0.2" SmallChange="0.05" ValueChanged="Sl_NoiseHeightDependency_Changed" Value="0.5"/>

        <TextBox Margin="10,0,10,10" TextWrapping="Wrap" Text="Seed" TextChanged="TB_Seed_Changed" Height="23" VerticalAlignment="Bottom"/>
        <WPFHost:DPFCanvas x:Name="DX11Display" Grid.Column="2" Stretch="Fill"/>
    </Grid>
</Window>
