<Window x:Class="MST_Heightmap_Generator_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="822">
    <Grid>
        <Grid.Margin>
            <Thickness>5</Thickness>
        </Grid.Margin>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto" MinHeight="512" />
            <RowDefinition Height="Auto" MinHeight="48" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="512" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="2" Height="512" VerticalAlignment="Top" x:Name="heightmapView" Margin="0,0,2,0"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Generate Heightmap" VerticalAlignment="Center" Height="32" Click="GenerateHeightmap" Margin="187,8,176,8"/>
        <Slider Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="130" Maximum="100" LargeChange="5" SmallChange="1" Minimum="1" ValueChanged="Sl_MaxHeight_Changed" Value="50"/>
        <Label Grid.Row="0" Grid.Column="0" Content="Maximum Height" HorizontalAlignment="Left" Margin="0,8,0,0" VerticalAlignment="Top" Height="26" Width="149"/>
        <Slider Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="26" Width="130" Maximum="1" LargeChange="0.2" SmallChange="0.05" ValueChanged="Sl_QuadraticSpline_Changed" Value="0.3"/>
        <Label Grid.Row="0" Grid.Column="0" Content="Quadratic Spline" HorizontalAlignment="Left" Margin="0,39,0,0" VerticalAlignment="Top" Height="26" Width="97"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,15,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Seed" VerticalAlignment="Top" Width="120" TextChanged="TB_Seed_Changed"/>
    </Grid>
</Window>
