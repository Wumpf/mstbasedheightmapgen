<Window x:Class="MST_Heightmap_Generator_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="532">
    <Grid>
        <Grid.Margin>5</Grid.Margin>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Height="512" VerticalAlignment="Top" Width="512" Name="heightmapView"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Generate Heightmap" VerticalAlignment="Center" Width="150" Height="31" Click="GenerateHeightmap"/>
    </Grid>
</Window>
