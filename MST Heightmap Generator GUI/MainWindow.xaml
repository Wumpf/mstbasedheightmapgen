<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WPFHost="clr-namespace:WPFHost" x:Class="MST_Heightmap_Generator_GUI.MainWindow"
        Title="MainWindow" Height="797.015" Width="1000" Closed="Window_Closed">
    <Grid>
        <Grid.Margin>
            <Thickness>5</Thickness>
        </Grid.Margin>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*" MinHeight="512" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Visual Height Scale" Margin="0,306,10,0" VerticalAlignment="Top" Height="26"/>
        <Slider Name="VisualScaleSlider" Grid.Row="0" Grid.Column="1" Margin="0,306,5,0" VerticalAlignment="Top" Height="26" Minimum="5" Maximum="500" LargeChange="0.15" SmallChange="0.025" Value="50" ValueChanged="Sl_VisualScaleSlider_Changed" AutoToolTipPlacement="TopLeft"/>

        <WPFHost:DPFCanvas x:Name="DX11Display" Grid.Column="2" Stretch="Fill" MouseLeftButtonDown="CanvasMouseLeftButtonDown"
                           MouseLeftButtonUp="CanvasMouseLeftButtonUp" MouseMove="CanvasMouseMove" MouseLeave="CanvasMouseLeave" MouseWheel="CanvasMouseWheel"/>

        <TreeView Name="Layers" Height="246" Margin="0,358,5,0" VerticalAlignment="Top" Grid.ColumnSpan="2" SelectedItemChanged="Layers_SelectedItemChanged"/>
        <ComboBox Name="LayerChoose" HorizontalAlignment="Left" Height="24" Margin="0,612,0,0" VerticalAlignment="Top" Width="133" SelectedIndex="0"/>
        <Button Content="+" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="4,612,0,0" VerticalAlignment="Top" Width="24" FontSize="18" FontFamily="Arial Black" Click="AddLayer"/>
        <Button Content="↑" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="33,612,0,0" VerticalAlignment="Top" Width="24" FontSize="18" FontFamily="Consolas" Click="MoveLayerUp"  RenderTransformOrigin="1.833,0.542"/>
        <Button Content="↓" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="62,612,0,0" VerticalAlignment="Top" Width="24" FontSize="18" FontFamily="Consolas" Click="MoveLayerDown" RenderTransformOrigin="1.833,0.542"/>
        <Button Content="X" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="91,612,0,0" VerticalAlignment="Top" Width="24" FontSize="18" FontFamily="Consolas" Click="DeleteLayer" RenderTransformOrigin="1.833,0.542"/>
        <ComboBox x:Name="LayerBlending" Height="24" Margin="0,332,5,0" VerticalAlignment="Top" SelectedIndex="0" Grid.Column="1" SelectionChanged="LayerBlending_Selected"/>
        <Label Content="Blending" HorizontalAlignment="Left" Height="26" Margin="0,332,0,0" VerticalAlignment="Top" Width="99"/>
        <Button Content="Generate!" VerticalAlignment="Top" Height="23" Click="RegenerateHeightmap" Margin="75,641,92,0" Focusable="False" Grid.ColumnSpan="2"/>
        <GroupBox Header="Deprecated UI" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="272" Margin="0,0,5,0">
            <Grid Margin="0,0,-12,-12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="66*"/>
                    <ColumnDefinition Width="79*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Generator" Margin="-1,5,1,0" VerticalAlignment="Top" Height="26"/>
                <ComboBox x:Name="GeneratorSelection" Height="26" Margin="10,5,15,0" VerticalAlignment="Top" SelectedIndex="1" SelectionChanged="Cb_Generator_Changed" Grid.Column="1">
                    <ComboBoxItem Content="MST Distance"/>
                    <ComboBoxItem Content="MST Inverse Distance"/>
                </ComboBox>

                <Slider Grid.Row="0" Margin="9,36,11,0" VerticalAlignment="Top" Height="26" Maximum="100" LargeChange="5" SmallChange="1" Minimum="1" ValueChanged="Sl_MaxHeight_Changed" Value="50" Grid.Column="1"/>
                <Label Grid.Row="0" Grid.Column="0" Content="Maximum Height" Margin="-1,36,1,0" VerticalAlignment="Top" Height="26"/>

                <Slider Grid.Row="0" Margin="9,62,11,0" VerticalAlignment="Top" Height="26" Maximum="1" LargeChange="0.2" SmallChange="0.05" ValueChanged="Sl_QuadraticSpline_Changed" Value="0.3" Grid.Column="1"/>
                <Label Grid.Row="0" Grid.Column="0" Content="Quadratic Spline" Margin="-1,60,1,0" VerticalAlignment="Top" Height="26"/>

                <Slider Grid.Row="0" Margin="10,114,11,0" VerticalAlignment="Top" Height="26" Maximum="0.8" LargeChange="0.15" SmallChange="0.05" ValueChanged="Sl_NoiseIntensity_Changed" Value="0.5" Grid.Column="1"/>
                <Label Grid.Row="0" Grid.Column="0" Content="Noise Intensity" Margin="-1,112,1,0" VerticalAlignment="Top" Height="26"/>

                <Label Grid.Row="0" Grid.Column="0" Content="Height Dependency" Margin="0,140,0,0" VerticalAlignment="Top" Height="26"/>
                <Slider Grid.Row="0" Margin="10,140,10,0" VerticalAlignment="Top" Height="26" Maximum="2.5" LargeChange="0.25" SmallChange="0.05" ValueChanged="Sl_NoiseHeightDependency_Changed" Value="0.5" Grid.Column="1"/>

                <Label Grid.Row="0" Grid.Column="0" Content="Gradient Dependency" Margin="0,192,0,0" VerticalAlignment="Top" Height="26"/>
                <Slider Grid.Row="0" Margin="10,192,10,0" VerticalAlignment="Top" Height="26" Maximum="0.025" LargeChange="0.005" SmallChange="0.001" ValueChanged="Sl_GradientDependency_Changed" Value="0.005" Grid.Column="1"/>

                <Label Grid.Row="0" Grid.Column="0" Content="Height Offset" Margin="-1,166,1,0" VerticalAlignment="Top" Height="26" ToolTip="Relative height where the height dependency beginns to influence the frequency."/>
                <Slider Grid.Row="0" Margin="9,166,15,0" VerticalAlignment="Top" Height="26" Maximum="1.0" LargeChange="0.1" SmallChange="0.025" ValueChanged="Sl_HeightDependencyOffset_Changed"  Value="1.0" Grid.Column="1"/>

                <TextBox x:Name="SeedEdit" Margin="13,218,0,0" TextWrapping="Wrap" Text="Seed" TextChanged="TB_Seed_Changed" Height="23" VerticalAlignment="Top" RenderTransformOrigin="0.817,0.478" HorizontalAlignment="Left" Width="114"/>

                <Button Content="Generate Heightmap" VerticalAlignment="Top" Height="23" Click="GenerateHeightmap" Margin="10,218,15,0" Focusable="False" Grid.Column="1"/>

                <Slider Grid.Row="0" Margin="10,88,11,0" VerticalAlignment="Top" Height="26" Maximum="10" LargeChange="0.5" SmallChange="0.1" ValueChanged="Sl_RefractionNoise_Changed" Value="3.0" Grid.Column="1"/>
                <Label Grid.Row="0" Grid.Column="0" Content="Refraction Noise" Margin="-1,86,1,0" VerticalAlignment="Top" Height="26"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
